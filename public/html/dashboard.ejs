<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Growtopia - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-5px); }
            100% { transform: translateY(0px); }
        }
        
        @keyframes pulse {
            0% { opacity: 0.8; }
            50% { opacity: 1; }
            100% { opacity: 0.8; }
        }

        .glass-effect {
            background: rgba(43, 77, 109, 0.85);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 2px solid rgba(135, 184, 204, 0.3);
        }

        .input-glow:focus {
            box-shadow: 0 0 15px rgba(0, 184, 255, 0.3);
        }
    </style>
</head>
<body class="flex flex-col items-center justify-center h-screen bg-gradient-to-br from-[#0a2e47] to-[#1a4b6e]">
    <div class="fixed inset-0 flex items-center justify-center">
        <div class="relative glass-effect shadow-2xl p-8 w-80 rounded-2xl transform transition-all duration-300 hover:scale-[1.02]">
            <div class="absolute inset-0 rounded-2xl border-2 border-[#87b8cc]/30 animate-pulse"></div>
            <p class="text-white text-center font-bold text-3xl mb-6 drop-shadow-lg animate-float">
                <span class="text-[#00b8ff]">LOGIN</span> PANEL
            </p>
            <div id="errorDiv" class="hidden mt-2 text-xs text-red-400 font-bold px-2 py-2 bg-red-900/20 rounded-lg transition-all duration-300 opacity-0 -translate-y-2">
                <a id="errorMessage"></a>
            </div>
            <form 
            method="post"
            action="/player/growid/login/validate"
            accept-charset="UTF-8"
            id="loginForm" class="mt-4 space-y-5">
                <div>
                    <input name="type" value="log" type="hidden" />
                    <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden" />
                    <div class="group relative">
                        <div class="absolute -inset-0.5 bg-gradient-to-r from-[#00b8ff] to-[#0066ff] rounded-lg blur opacity-20 group-hover:opacity-40 transition duration-300"></div>
                        <div class="relative flex items-center border-2 border-[#81d4fa]/30 rounded-lg bg-[#2b4d6d]/30 px-3 py-2 transition-all duration-300 hover:border-[#81d4fa]/60">
                            <i class="fas fa-user text-[#81d4fa] mr-2 text-sm"></i>
                            <input type="text" name="growId" id="loginGrowId" class="w-full bg-transparent text-white text-sm placeholder-[#81d4fa]/70 focus:outline-none input-glow" 
                                   placeholder="Enter your growid"
                                   style="text-shadow: 0 0 8px rgba(129, 212, 250, 0.3);">
                        </div>
                    </div>
                </div>
                <div>
                    <div class="group relative">
                        <div class="absolute -inset-0.5 bg-gradient-to-r from-[#00b8ff] to-[#0066ff] rounded-lg blur opacity-20 group-hover:opacity-40 transition duration-300"></div>
                        <div class="relative flex items-center border-2 border-[#81d4fa]/30 rounded-lg bg-[#2b4d6d]/30 px-3 py-2 transition-all duration-300 hover:border-[#81d4fa]/60">
                            <i class="fas fa-lock text-[#81d4fa] mr-2 text-sm"></i>
                            <input type="password" name="password" id="loginPassword" class="w-full bg-transparent text-white text-sm placeholder-[#81d4fa]/70 focus:outline-none input-glow" 
                                   placeholder="Enter your password"
                                   style="text-shadow: 0 0 8px rgba(129, 212, 250, 0.3);">
                            <button type="button" id="toggleLogPassword" class="text-[#81d4fa] ml-2 focus:outline-none hover:text-white transition-colors">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="flex justify-center">
                    <button id="loginButton" class="px-6 py-2 rounded-full bg-gradient-to-r from-[#00b8ff] to-[#0066ff] text-white font-bold text-sm hover:scale-105 hover:shadow-lg transition-all duration-300 transform group relative">
                        <span class="relative z-10">ACCESS WORLD</span>
                        <div class="absolute inset-0 bg-gradient-to-r from-[#00b8ff] to-[#0066ff] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 animate-pulse"></div>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <script>
        // Original JavaScript functionality remains unchanged
        document.addEventListener('DOMContentLoaded', function () {
            if (localStorage.getItem('growId')) {
                document.getElementById('loginGrowId').value = localStorage.getItem('growId');
            }
        });

        document.getElementById('loginButton').addEventListener('click', function (event) {
            event.preventDefault();
            const errorDiv = document.getElementById('errorDiv');
            const uName = document.getElementById('loginGrowId').value;
            const uPass = document.getElementById('loginPassword').value;

            errorDiv.classList.remove('animate-error');
            void errorDiv.offsetWidth; // Trigger reflow

            if (!uName || !uPass) {
                showError('Username or Password is empty');
                return;
            } else if (uName.length < 4 || uPass.length < 4) {
                showError('Must be at least 4 characters');
                return;
            } else {
                document.getElementById('loginForm').submit();
                localStorage.setItem('growId', uName);
            }
        });

        function showError(message) {
            const errorDiv = document.getElementById('errorDiv');
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.textContent = message;
            errorDiv.classList.remove('hidden', 'opacity-0', '-translate-y-2');
            errorDiv.classList.add('animate-error');
            setTimeout(() => {
                errorDiv.classList.add('opacity-0', '-translate-y-2');
            }, 3000);
        }

        document.getElementById('toggleLogPassword').addEventListener('click', function () {
            const LpasswordField = document.getElementById('loginPassword')
            const LpasswordFieldType = LpasswordField.getAttribute('type');
            if (LpasswordFieldType === 'password') {
                LpasswordField.setAttribute('type', 'text');
                this.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                LpasswordField.setAttribute('type', 'password');
                this.innerHTML = '<i class="fas fa-eye"></i>';
            }
        });
    </script>
    <style>
        @keyframes error {
            0% { transform: translateX(0); }
            25% { transform: translateX(5px); }
            50% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
            100% { transform: translateX(0); }
        }

        .animate-float {
            animation: float 3s ease-in-out infinite;
        }

        .animate-error {
            animation: error 0.4s ease-in-out;
        }

        .animate-pulse {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
    </style>
</body>
</html>
